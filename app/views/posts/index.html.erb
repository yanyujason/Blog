<h1>Listing posts</h1>

<%= link_to 'New post', '/posts/new' %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= link_to 'Show', 'posts/show' %></td>
        <td><%= link_to 'Edit', edit_posts_path(post) %></td>
        <td><%= link_to 'Destroy', posts_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>